{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noImportCycles": "error",
        "useSortedClasses": "error",
        "useExhaustiveSwitchCases": "error",
        "noUselessUndefined": "error",
        "noShadow": "error",
        "noSecrets": "off",
        "noFloatingPromises": "off",
        "useExplicitType": "off",
        "noUnresolvedImports": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useIndexOf": "error",
        "noImplicitCoercions": "error",
        "noImportantStyles": "error",
        "noExcessiveLinesPerFunction": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noBitwiseOperators": "error",
        "useIterableCallbackReturn": "error",
        "useStaticResponseMethods": "error",
        "noUnassignedVariables": "error",
        "noUnknownAtRules": "error",
        "noUselessEscapeInString": "error",
        "noConstantBinaryExpressions": "error",
        "noTsIgnore": "error",
        "noUselessRegexBackrefs": "error"
      },
      "style": {
        "noParameterAssign": "error",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "noUselessElse": "error",
        "useSymbolDescription": "error",
        "useUnifiedTypeSignatures": "error",
        "useReadonlyClassProperties": "error",
        "useNumericSeparators": "error",
        "useObjectSpread": "error",
        "useGroupedAccessorPairs": "error",
        "useConsistentObjectDefinitions": "error",
        "useExportsLast": "off"
      },
      "correctness": {
        "useParseIntRadix": "error",
        "useSingleJsDocAsterisk": "error",
        "useGraphqlNamedOperations": "error",
        "useJsonImportAttributes": "error",
        "noSolidDestructuredProps": "error",
        "noGlobalDirnameFilename": "error",
        "noNestedComponentDefinitions": "error",
        "noProcessGlobal": "error",
        "noRestrictedElements": {
          "level": "error",
          "options": {
            "elements": {
              "a": "use element/<Link> instead"
            }
          }
        },
        "useUniqueElementIds": "error"
      },
      "performance": {
        "useGoogleFontPreconnect": "error",
        "noUnwantedPolyfillio": "error",
        "noAwaitInLoops": "error",
        "useSolidForComponent": "off"
      },
      "a11y": {
        "noNoninteractiveElementInteractions": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":NODE:", ":BUN:"],
              ":BLANK_LINE:",
              [":ALIAS:", ":PACKAGE:"],
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/src/generated/**/*.ts",
      "!**/src-tauri/target/**/*",
      "!**/src-tauri/gen/**/*"
    ]
  }
}
