{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noImportCycles": "error",
        "noAwaitInLoop": "error",
        "noBitwiseOperators": "error",
        "useSortedClasses": "error",
        "useSymbolDescription": "error",
        "useUnifiedTypeSignature": "error",
        "useParseIntRadix": "error",
        "useReadonlyClassProperties": "error",
        "useSingleJsDocAsterisk": "error",
        "useNamedOperation": "error",
        "useNamingConvention": "error",
        "useNumericSeparators": "error",
        "useObjectSpread": "error",
        "useGoogleFontPreconnect": "error",
        "useIndexOf": "error",
        "useIterableCallbackReturn": "error",
        "useJsonImportAttribute": "error",
        "useExhaustiveSwitchCases": "error",
        "noDestructuredProps": "error",
        "noGlobalDirnameFilename": "error",
        "noImplicitCoercion": "error",
        "noImportantStyles": "error",
        "noNestedComponentDefinitions": "error",
        "noProcessGlobal": "error",
        "noRestrictedElements": "error",
        "useUniqueElementIds": "error",
        "useAdjacentGetterSetter": "error",
        "useConsistentObjectDefinition": "error",
        "useConsistentResponse": "error",
        "noUnassignedVariables": "error",
        "noUnknownAtRule": "error",
        "noUnwantedPolyfillio": "error",
        "noUselessBackrefInRegex": "error",
        "noUselessEscapeInString": "error",
        "noUselessUndefined": "error",
        "noConstantBinaryExpression": "error",
        "noSecrets": "off",
        "noExcessiveLinesPerFunction": "off",
        "noNoninteractiveElementInteractions": "off",
        "useForComponent": "off",
        "useExplicitType": "off",
        "useExportsLast": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noParameterAssign": "error",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "noUselessElse": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":NODE:", ":BUN:"],
              ":BLANK_LINE:",
              [":ALIAS:", ":PACKAGE:"],
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/src/generated/**/*.ts",
      "!**/src-tauri/target/**/*",
      "!**/src-tauri/gen/**/*"
    ]
  }
}
