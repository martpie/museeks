{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 80,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.css"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "ignorePatterns": [
    "**/node_modules",
    "**/dist",
    "**/src/generated/**/*.ts",
    "**/src-tauri/target/**/*",
    "**/src-tauri/gen/**/*"
  ]
}
